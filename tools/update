#!/usr/bin/bash

distro_commands(){
    if [ "$DISTRO" == "fedora" ] && [ -z "$OSTREE" ]
    then
        sudo dnf upgrade -y
        sudo dnf autoremove -y
    elif [ "$DISTRO" == "opensuse-tumbleweed" ]
    then
        sudo zypper -n dup --auto-agree-with-licenses
    else
        echo ""
    fi
}

update(){
    if [ "$1" == "--apps" ] || [ "$1" == "-a" ] || [ "$1" == "apps" ]
    then
        flatpak update -y
        flatpak remove --unused -y
    elif [ "$1" == "--system" ] || [ "$1" == "-s" ] || [ "$1" == "system" ]
    then
        distro_commands
    elif [ "$1" == "--all" ] || [ "$1" == "-A" ] || [ "$1" == "all" ]
    then
        flatpak update -y
        flatpak remove --unused -y
        distro_commands
    elif [ "$1" == "--tools" ] || [ "$1" == "-t" ] || [ "$1" == "tools" ]
    then
        update_tools
    elif [ -z "$1" ]
    then
        echo "update: no option given"
        echo "Usage: update [OPTION]"
        echo "Try 'update --system' or 'update --help' to see options"
    else
        echo "Invalid option: $1"
        echo ""
        update_help
    fi
}

update_tools(){
    mkdir -p ~/.local/bin/update_temp
    cd ~/.local/bin/update_temp || exit
    git clone https://github.com/Dskobra/dsks-tools
    cd dsks-tools/tools || exit
    mv update ~/.local/bin/update
    mv gcache ~/.local/bin/gcache
    rm -r -f ~/.local/bin/update_temp
    exit
}

update_help(){
    echo "update [args]"
    echo ""
    echo ""
    echo "Examples: "
    echo "  update --apps"
    echo "  update --system"
    echo "  update --all"
    echo ""
    echo ""
    echo "Available arguments:"
    echo "  --apps, -a, apps            # update flatpaks"
    echo "  --system, -s, system        # update rpm packages"
    echo "  --all, -A, all              # update all of the above"
    echo "  --tools, -t, tools          # updates this script and gcache"
}
DISTRO=$(source /etc/os-release ; echo $ID)
update "$1"
